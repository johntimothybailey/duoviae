{
  "extends": [
    "standard-with-typescript",
    "standard-jsx"
  ],
  "parserOptions": {
    "project": "./tsconfig.json"
  },
  "rules": {
    "@typescript-eslint/strict-boolean-expressions": ["off"]
  },
  "overrides": [
    {
      // enable the rule specifically for TypeScript files
      "files": ["*.tsx"],
      "rules": {
        "@typescript-eslint/explicit-function-return-type": ["warn"]
      }
    }
  ]
}
